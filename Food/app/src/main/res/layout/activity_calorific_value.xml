<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <ImageView
        android:id="@+id/iv_bg"
        android:background="@drawable/food3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_nutrient_name"
            android:text="NUTRIENT NAME"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp" />

        <TextView

            android:text="VALUE PER 100 grams"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_alignParentRight="true"
            />





        <TextView
            android:id="@+id/calories"
            android:layout_below="@id/tv_nutrient_name"
            android:layout_margin="25dp"
            android:text="CALORIES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <TextView
            android:text="DEFAULT"
            android:id="@+id/tv_calories"
            android:layout_margin="25dp"
            android:paddingRight="35dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nutrient_name"/>




        <TextView
            android:id="@+id/carbs"
            android:text="CARBOHYDRATES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calories"
            android:layout_margin="25dp"/>

        <TextView
            android:text="DEFAULT"
            android:id="@+id/tv_carbs"
            android:layout_margin="25dp"
            android:paddingRight="35dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calories"
            />




        <TextView
            android:id="@+id/fats"
            android:text="FATS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_below="@id/carbs"/>

        <TextView
            android:text="DEFAULT"
            android:id="@+id/tv_fats"
            android:layout_margin="25dp"
            android:paddingRight="35dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carbs"/>


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/progressbar"
            android:visibility="invisible"
            />



        <TextView
            android:id="@+id/sugar"
            android:text="SUGAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_below="@id/fats"/>

        <TextView
            android:text="DEFAULT"
            android:id="@+id/tv_sugar"
            android:layout_below="@id/fats"
            android:layout_alignParentRight="true"
            android:paddingRight="35dp"
            android:layout_margin="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



        <TextView
            android:id="@+id/protien"
            android:text="Protien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_below="@id/sugar"/>

        <TextView
            android:text="DEFAULT"
            android:layout_below="@id/sugar"
            android:id="@+id/tv_protien"
            android:paddingRight="35dp"
            android:layout_margin="25dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <Button
            android:text="Alternative Recipe"
            android:background="@drawable/round_button"
            android:onClick="onRecipe"
            android:layout_below="@id/protien"
            android:layout_margin="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>